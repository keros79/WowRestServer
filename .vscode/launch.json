{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript in Node.js",
      "preLaunchTask": "typescript",
      "program": "${workspaceFolder}/ts/server.ts",
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceFolder}/js/**/*.js"
      ],
      "env": {
          "NODE_ENV": "development"
      },
      "outputCapture": "std"
    }
  ]
}